 <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 
 <%= form_with model: @genre,url: admin_genres_path do |f| %>
 <%= f.text_field :name %>
  <%= f.submit '新規登録',class:"btn btn-outline-danger" %>
   <% end %>

   <% @genres.each do |genre| %>
   <%= genre.name %>
   <%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-outline-danger" %>
   <% end %>