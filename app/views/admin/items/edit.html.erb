<h1>編集画面</h1>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :name %>

  <h4>本文</h4>
  <%= f.text_area :description %>

   <h4>税抜価格</h4>
      <%= f.text_field :price %>
  <h4>販売ステータス</h4>

            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中" %>

  <%= f.submit '保存' %>

<% end %>