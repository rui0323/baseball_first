<h1>商品一覧</h1>

<% @items.each do |item| %>

   <%#= image_tag item.image ,size: "200x200" %>
  <span><%= link_to item.name, admin_item_path(item.id) %></span>
  <span><%= item.description %></span>
  <span><%= item.price %></span>
  <span><%= item.genre.name %></span>
  <span><% if item.is_active %>
 <p>販売中</p>
 <% else %>
 <p>販売停止中</p>
 <% end %>
 </span>
<% end %>