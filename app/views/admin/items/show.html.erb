<div class="container">
  <%= flash[:notice] %>
    <div class="row">
      <div class="col-4 mt-5 pt-5">
        <% if @item.image.attached? %>
         <% @item.image.each do |image| %>
        <%= image_tag image ,size: "200x200" %>
         <% end %>
         <% end %>
      </div>

      <div class="col-6 mt-5 pt-5">
        <table class="table table-borderless">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>説明</td>
            <td><%= @item.description %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>提供メーカー：<%#= image_tag 'sample-author1.jpg' %></td>
          </tr>

          <tr>
            <td>税込価格（税抜価格）</td>
            <td><%= @item.price %>円</td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td>
            <% if @item.is_active %>
            <p style="color: red;">販売中</p>
            <% else %>
            <p style="color: black">販売停止中</p>
            <% end %>
            </td>
          </tr>

          <tr>
            <td>発売日</td>
            <td><%= @item.created_at.strftime('%Y/%m/%d') %></td>
          </tr>

          <tr>
            <td><%= link_to "編集", edit_admin_item_path(@item.id),class:"btn btn-outline-success mt-10" %></td>
            <td><%= link_to "削除", admin_item_path(@item.id), method: :delete,class:"btn btn-outline-danger mt-10" %></td>
          </tr>
      </table>
    </div>
  </div>
</div>