<!DOCTYPE html>
<html>
  <head>
    <title>BaseballFirst</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
　<header class="sticky-top">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark text-white">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
   　　　    　　　 <% if customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", cart_items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文情報入力", new_order_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "マイページ", customer_path(current_customer) %>
                </li>
　              <li class="nav-item">
                  <%= link_to "配送先一覧", shopping_addresses_path %>
               </li>
             <% elsif admin_signed_in? %>
               <li class="nav-item">
                 <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
               </li>
               <li class="nav-item">
                 <%= link_to "商品投稿", new_admin_item_path %>
               </li>
               <li class="nav-item">
                 <%= link_to "商品一覧", admin_items_path %>
               </li>
               <li class="nav-item">
                 <%= link_to "ジャンル", admin_genres_path %>
               </li>
               <li class="nav-item">
                 <%= link_to "会員一覧", admin_customers_path %>
               </li>

             <% else %>
                <li class="nav-item">
                  <%= link_to "TOP", root_path %>
               </li>
               <li class="nav-item">
                 <%= link_to "新規登録", new_customer_registration_path %>
               </li>
               <li class="nav-item">
                 <%= link_to "ログイン", new_customer_session_path %>
               </li>
             <% end %>
           </div>
         </nav>
      </header>
    <%= yield %>

  </body>
</html>
