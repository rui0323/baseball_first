<h1>ショッピングカート画面</h1>
 <%= link_to "カートを空にする",cart_items_destroy_all_path, method: :delete %>
 <% @cart_items.each do |cart_item| %>
  <%= form_with model:cart_item, local:true do |f| %>
  <%= f.hidden_field :item_id, value:cart_item.item.id %>
  <%= f.hidden_field :customer_id, value:current_customer.id %>
  <%= image_tag cart_item.item.image ,size: "100x100" %>
  <%= cart_item.item.name %>
  <%= cart_item.item.add_tax_price.to_s(:delimited) %>
   <%= f.select :amount, *[1..10] %>
  <%= f.submit "変更" %>
  <%= cart_item.subtotal %>
  <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %>
  <% end %>
   <% end %>
    <%= link_to "情報入力に進む", new_order_path %>
     <%= link_to "買い物を続ける", items_path %>