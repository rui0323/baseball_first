<div class="container">
  <div class="row">
    <div class="col-2 md-4">
      <div style="border: double;">
        <div style="text-align: center">
          <h4>ジャンル検索</h4>
        </div>
          <% @genres.each do |genre| %>
            <div style="text-align: center">
              <p><%= link_to genre.name,items_path(genre_id: genre.id)%></p>
            </div>
          <% end %>
        </div>
    </div>

    <div class="col-8 md-6  offset-md-1">
      <h3><%= @title %>一覧</h3>
        <div class="d-flex flex-wrap">
         <table class="table table-bordered">
          <% @items.each do |item| %>
           <tr>

             <td><% if item.image.attached? %>
             <%= link_to item_path(item.id) do %>
             <%= image_tag item.image.last ,size: "100x100" %>
             <% end %>
             <% end %>
             </td>
             <td>
            <h2><%= link_to item.name, item_path(item.id)  %></h2>
            <p>発売日：<%= item.created_at.strftime('%Y/%m/%d') %></p>
             <%#= item.description %>
             </td>
             <td>
             ￥<%= item.price %>
            </td>
            </tr>
          <% end %>
           </table>
        </div>

        <div class="item__paginate">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>