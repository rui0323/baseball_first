<div class="container">
  <div class="row">
    <div class="col-2 md-4">
      <div style="border: double;">
        <div style="text-align: center">
          <h4>ジャンル検索</h4>
        </div>
          <% @genres.each do |genre| %>
            <div style="text-align: center">
              <%= link_to genre.name,items_path(genre_id: genre.id)%>
            </div>
          <% end %>
        </div>
    </div>

    <div class="col-8 md-6  offset-md-1">
      <h3><%= @title %>一覧</h3>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
           <div class="p-2">
               <% if item.image.attached? %>
             <%= link_to item_path(item.id) do %>
            <%= image_tag item.image.last ,size: "100x100" %>
             <% end %>
              <% end %>
            </div>
             <div class="p-2">
            <%= link_to item.name, item_path(item.id)  %>
            </div>
               <%#= item.description %>
             <div class="p-2">
             ￥<%= item.price %>
             </div>

          <% end %>

        </div>
    </div>

  </div>
   <%= paginate @items %>
</div>