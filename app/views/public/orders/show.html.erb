<div class="container">
  <div class="row">
    <div class="offset-md-2">
      <h2>注文履歴詳細</h2>
    </div>
  </div></br>

  <div class="row">
    <div class="col-md-6">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postcode %><br><%= @order.address %><br>
            <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status %></td>
           </tr>
        </tbody>
      </table>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tbody>
             <tr>
            <td>商品合計</td>
            <td><%= @total %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td><%= @total_price + @order.shipping_fee %></td>
          </tr>
           </tbody>
      </table>
      </div>
      </div>

       <h4>注文内容</h4>
      <div class="row">
      <div class="col-md-6 ">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
         <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            <% @total_price += order_detail.subtotal %>
          </tr>
          <% end %>
           </tbody>
      </table>
      </div>
    </div>
          </div>