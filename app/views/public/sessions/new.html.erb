<div class="container mt-5 mb-5">
  <div class="row mt-3">
    <div class="col-sm-4 px-sm-0 offset-sm-4">
      <h2>ログイン</h2>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-sm-4 px-sm-0 offset-sm-4">
      会員の方はこちらからログイン
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-sm-2 px-sm-0 offset-sm-4">
        <%= f.label "メールアドレス" %><br />
      </div>
      <div class="col-sm-3 px-sm-0">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 px-sm-0 offset-sm-4">
        <%= f.label "パスワード" %><br />
      </div>
      <div class="col-sm-3 px-sm-0">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 px-sm-0 offset-sm-4">
        <%= f.submit "ログイン", class:"btn btn-primary px-4 mt-3 mb-5" %>
      </div>

      <div class="col-sm-2 px-sm-0 ">
  <%= render "public/shared/links", class:"btn btn-primary px-4 mt-3 mb-5" %>
   </div>
    </div>
  <% end %>

</div>